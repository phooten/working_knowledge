# Global defaults
Host *
  IgnoreUnknown UseKeychain   # Linux ignores this, macOS uses it
  UseKeychain yes             # macOS will store passphrases in keychain
  AddKeysToAgent yes          # Automatically add keys to ssh-agent
  IdentityFile <path-to-id>
  IdentitiesOnly yes

# --- GitHub ---
Host github.com
  HostName github.com
  User git
  IdentityFile <path-to-id>

# --- GitLab ---
Host gitlab.com
  HostName gitlab.com
  User git
  IdentityFile <path-to-id>

# --- personal server ---
Host mserver
  HostName myserver.example.com
  User yourusername
  Port 22
  IdentityFile <path-to-id>
